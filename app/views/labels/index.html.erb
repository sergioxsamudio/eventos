<div class="max-w-4xl mx-auto p-6 bg-white shadow-lg rounded-lg">
  
  <!-- ‚úÖ Mensaje de √©xito -->
  <% if notice.present? %>
    <p class="bg-green-100 text-green-700 p-3 rounded-md mb-4 text-center"><%= notice %></p>
  <% end %>

  <!-- üìå T√≠tulo -->
  <h1 class="text-3xl font-bold text-gray-800 text-center mb-6"><%= t("labels.index.title") %></h1>

  <!-- üîñ Lista de Etiquetas -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
    <% @labels.each do |label| %>
      <div class="bg-gray-100 p-4 rounded-lg shadow-md flex flex-col justify-between hover:shadow-lg transition">
        <h2 class="text-xl font-semibold text-gray-700"><%= label.name %></h2>

        <div class="mt-4 flex justify-between items-center">
          <!-- üîç Ver Etiqueta -->
          <%= link_to label, class: "px-3 py-2 bg-blue-500 text-white rounded-md hover:bg-blue-600 transition" do %>
            üîç <span class="font-bold"><%= t("labels.index.show") %></span>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>

  <!-- ‚ûï Crear Nueva Etiqueta -->
  <div class="mt-6 text-center">
    <%= link_to new_label_path, class: "px-4 py-2 bg-green-500 text-white rounded-md shadow-md hover:bg-green-600 transition" do %>
      ‚ûï <span class="font-bold"><%= t("labels.index.new") %></span>
    <% end %>
  </div>

</div>

