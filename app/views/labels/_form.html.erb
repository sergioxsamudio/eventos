<div class="max-w-lg mx-auto p-6 bg-white shadow-lg rounded-lg">
  <h2 class="text-2xl font-semibold text-center text-gray-800 mb-4"><%= t("labels.form.title") %></h2>

  <%= form_with(model: label, class: "space-y-4") do |form| %>
    
    <!-- ðŸ›‘ Mensajes de error -->
    <% if label.errors.any? %>
      <div class="p-4 bg-red-100 border border-red-400 text-red-700 rounded-md">
        <h2 class="font-bold"><%= pluralize(label.errors.count, t("labels.form.error")) %> <%= t("labels.form.prohibited") %></h2>
        <ul class="list-disc pl-5 mt-2">
          <% label.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <!-- ðŸ“Œ Campo de nombre -->
    <div>
      <%= form.label :name, t("labels.form.name"), class: "block font-medium text-gray-700 mb-1" %>
      <%= form.text_field :name, class: "w-full px-4 py-2 border rounded-md focus:ring-2 focus:ring-blue-500 focus:outline-none" %>
    </div>

    <!-- ðŸ”˜ BotÃ³n de envÃ­o -->
    <div class="text-center">
      <%= form.submit t("labels.form.submit"), class: "bg-blue-500 text-white px-6 py-2 rounded-md font-bold shadow-md transition transform hover:bg-blue-600 hover:scale-105" %>
    </div>
  <% end %>
</div>

