<div class="max-w-lg mx-auto mt-10 bg-white shadow-lg rounded-lg p-8">
  <!-- 📝 Título -->
  <h2 class="text-2xl font-bold text-center text-gray-700 mb-6"><%= t("devise.registrations.sign_up") %></h2>

  <!-- 🔴 Mensajes de error -->
  <%= render "devise/shared/error_messages", resource: resource %>

  <!-- 📝 Formulario -->
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <div class="space-y-4">
      <!-- 🏷️ Nombre -->
      <div>
        <%= f.label :first_name, t("devise.registrations.first_name"), class: "block text-gray-700 font-semibold mb-1" %>
        <%= f.text_field :first_name, required: true, class: "w-full border border-gray-300 rounded-md p-2 focus:ring focus:ring-blue-300" %>
      </div>

      <!-- 🏷️ Apellido -->
      <div>
        <%= f.label :last_name, t("devise.registrations.last_name"), class: "block text-gray-700 font-semibold mb-1" %>
        <%= f.text_field :last_name, required: true, class: "w-full border border-gray-300 rounded-md p-2 focus:ring focus:ring-blue-300" %>
      </div>

      <!-- 📞 Teléfono -->
      <div>
        <%= f.label :phone_number, t("devise.registrations.phone_number"), class: "block text-gray-700 font-semibold mb-1" %>
        <%= f.text_field :phone_number, required: true, class: "w-full border border-gray-300 rounded-md p-2 focus:ring focus:ring-blue-300" %>
      </div>

      <!-- 📧 Email -->
      <div>
        <%= f.label :email, t("devise.registrations.email"), class: "block text-gray-700 font-semibold mb-1" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full border border-gray-300 rounded-md p-2 focus:ring focus:ring-blue-300" %>
      </div>

      <!-- 🔑 Contraseña -->
      <div>
        <%= f.label :password, t("devise.registrations.password"), class: "block text-gray-700 font-semibold mb-1" %>
        <% if @minimum_password_length %>
          <em class="text-sm text-gray-500">(<%= t("devise.registrations.min_length", length: @minimum_password_length) %>)</em>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password", class: "w-full border border-gray-300 rounded-md p-2 focus:ring focus:ring-blue-300" %>
      </div>

      <!-- 🔑 Confirmación de Contraseña -->
      <div>
        <%= f.label :password_confirmation, t("devise.registrations.password_confirmation"), class: "block text-gray-700 font-semibold mb-1" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full border border-gray-300 rounded-md p-2 focus:ring focus:ring-blue-300" %>
      </div>

      <!-- 🎯 Botón de Registro -->
      <div class="mt-6">
        <%= f.submit t("devise.registrations.sign_up_button"), class: "w-full bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-md transition transform hover:scale-105" %>
      </div>
    </div>
  <% end %>
</div>





