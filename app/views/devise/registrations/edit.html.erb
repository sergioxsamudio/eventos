<div class="max-w-lg mx-auto mt-10 bg-white shadow-lg rounded-lg p-8">
  <!-- ðŸ“ TÃ­tulo -->
  <h2 class="text-2xl font-bold text-center text-gray-700 mb-6">
    <%= t("devise.registrations.edit_title", resource_name: resource_name.to_s.humanize) %>
  </h2>

  <!-- ðŸ”´ Mensajes de error -->
  <%= render "devise/shared/error_messages", resource: resource %>

  <!-- ðŸ“ Formulario -->
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <div class="space-y-4">
      
      <!-- ðŸ·ï¸ Nombre -->
      <div>
        <%= f.label :first_name, class: "block text-gray-700 font-semibold mb-1" %>
        <%= f.text_field :first_name, class: "w-full border border-gray-300 rounded-md p-2 focus:ring focus:ring-blue-300" %>
      </div>

      <!-- ðŸ·ï¸ Apellido -->
      <div>
        <%= f.label :last_name, class: "block text-gray-700 font-semibold mb-1" %>
        <%= f.text_field :last_name, class: "w-full border border-gray-300 rounded-md p-2 focus:ring focus:ring-blue-300" %>
      </div>

      <!-- ðŸ“ž NÃºmero de TelÃ©fono -->
      <div>
        <%= f.label :phone_number, class: "block text-gray-700 font-semibold mb-1" %>
        <%= f.text_field :phone_number, class: "w-full border border-gray-300 rounded-md p-2 focus:ring focus:ring-blue-300" %>
      </div>

      <!-- ðŸ“§ Email -->
      <div>
        <%= f.label :email, class: "block text-gray-700 font-semibold mb-1" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full border border-gray-300 rounded-md p-2 focus:ring focus:ring-blue-300" %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div class="text-sm text-gray-600 bg-yellow-100 p-2 rounded-md">
          <%= t("devise.registrations.waiting_confirmation", email: resource.unconfirmed_email) %>
        </div>
      <% end %>

      <!-- ðŸ”‘ Nueva ContraseÃ±a -->
      <div>
        <%= f.label :password, class: "block text-gray-700 font-semibold mb-1" %>
        <%= f.password_field :password, autocomplete: "new-password", class: "w-full border border-gray-300 rounded-md p-2 focus:ring focus:ring-blue-300" %>
        <% if @minimum_password_length %>
          <p class="text-xs text-gray-500 mt-1"><%= t("devise.registrations.min_length", length: @minimum_password_length) %></p>
        <% end %>
      </div>

      <!-- ðŸ”‘ ConfirmaciÃ³n de ContraseÃ±a -->
      <div>
        <%= f.label :password_confirmation, class: "block text-gray-700 font-semibold mb-1" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full border border-gray-300 rounded-md p-2 focus:ring focus:ring-blue-300" %>
      </div>

      <!-- ðŸ” ContraseÃ±a Actual -->
      <div>
        <%= f.label :current_password, class: "block text-gray-700 font-semibold mb-1" %>
        <%= f.password_field :current_password, autocomplete: "current-password", class: "w-full border border-gray-300 rounded-md p-2 focus:ring focus:ring-blue-300" %>
        <p class="text-xs text-gray-500 mt-1"><%= t("devise.registrations.current_password_required") %></p>
      </div>

      <!-- ðŸŽ¯ Botones de AcciÃ³n -->
      <div class="mt-6 flex justify-between">
        <%= link_to t("devise.registrations.cancel_edit"), root_path, class: "bg-gray-500 hover:bg-gray-600 text-white font-bold py-2 px-4 rounded-md transition" %>
        <%= f.submit t("devise.registrations.update_button"), class: "bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-md transition transform hover:scale-105" %>
      </div>
    </div>
  <% end %>

  <!-- âŒ Cancelar Cuenta -->
  <div class="mt-8 bg-red-100 p-4 rounded-md text-center">
    <h3 class="text-lg font-bold text-red-600"><%= t("devise.registrations.cancel_account") %></h3>
    <p class="text-sm text-gray-600 mb-3"><%= t("devise.registrations.unhappy_text") %></p>
    <%= button_to t("devise.registrations.cancel_button"), registration_path(resource_name), method: :delete, data: { confirm: t("devise.registrations.confirm_cancel") }, class: "bg-red-600 hover:bg-red-700 text-white font-bold py-2 px-4 rounded-md transition" %>
  </div>
</div>




